{% extends 'base.html.twig' %}

{% block title %}Hello GalleryController!{% endblock %}

{% block content %}
    <div class=""  data-aos="fade">
        <div class="container-fluid">

            <div class="site-section"  data-aos="fade">
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="col-md-7">
                            <div class="row mb-5">
                                <div class="col-12 ">
                                    <h2 class="site-section-heading text-center">{{ gallery.name }}</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="lightgallery">
                        {% for galleryItem in galleryItems %}
                        <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 item" data-aos="fade" data-src="images/big-images/nature_big_1.jpg" data-sub-html="<h4>Fading Light</h4><p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolor doloremque hic excepturi fugit, sunt impedit fuga tempora, ad amet aliquid?</p>">
                            <a href="#"><img src="/images/gallery/{{ gallery.directory }}/{{ galleryItem.picture }}" alt="IMage" class="img-fluid"></a>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
